@using System.Resources
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <div class="logo"></div>
            <div class="app-title"> <span class="app-title-first-letter">R</span>eadyList</div>
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="today" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Сегодня
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="schedule">
                <span class="oi oi-plus" aria-hidden="true"></span> Расписание
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="myself">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Для меня
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/all/tasks">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Все задачи
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
