<div class="issue-header">
    <input type="checkbox" @_isDoneStyle/>
    <div class="issue-title">@Issue.Title</div>
</div>

<div class="issue-info">
    <div class="date">@Issue.Date</div>
    <div class="time">@Issue.Time</div>
    <AssociatedUsers />
</div>

@code {
    private string? _isDoneStyle;

    [Parameter]
    public Issue Issue { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _isDoneStyle = Issue.IsDone ? "checked" : string.Empty;
    }
}
